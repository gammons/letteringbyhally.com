---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Thank You - Lettering by Hally"
  description="Thank you for your inquiry. I'll be in touch soon!"
>
  <Header />

  <main>
    <section class="thank-you">
      <div class="container text-center">
        <div class="thank-you-content">
          <h1>Thank You!</h1>
          <p class="lead">
            Your inquiry has been received. I'll review your details and respond within 24 hours.
          </p>
          <p>
            In the meantime, feel free to explore my portfolio or learn more about my services.
          </p>
          <div class="thank-you-actions">
            <Button href="/portfolio" variant="primary">View Portfolio</Button>
            <Button href="/" variant="outline">Back to Home</Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .thank-you {
    min-height: calc(100vh - var(--header-height) - 400px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xl) 0;
    margin-top: var(--header-height);
  }

  .thank-you-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .thank-you h1 {
    color: var(--color-gold-accent);
    margin-bottom: var(--space-md);
  }

  .lead {
    font-size: 1.25rem;
    margin-bottom: var(--space-lg);
    opacity: 0.9;
  }

  .thank-you p {
    margin-bottom: var(--space-xl);
  }

  .thank-you-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
