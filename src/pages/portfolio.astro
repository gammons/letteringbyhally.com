---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PortfolioGrid from '../components/PortfolioGrid.astro';
import { readFileSync } from 'fs';
import { load } from 'js-yaml';

const portfolio = load(readFileSync('content/portfolio.yml', 'utf8')) as Array<{
  id: string;
  image: string;
  title: string;
  category: string;
  materials: string;
  description: string;
}>;
---

<BaseLayout
  title="Portfolio - Lettering by Hally"
  description="Browse our collection of wedding calligraphy, envelope addressing, signage, and custom commissions."
>
  <Header />

  <main>
    <section class="page-hero">
      <div class="container">
        <h1>Portfolio</h1>
        <p class="lead">
          A collection of recent work showcasing invitations, envelopes, signage, and custom pieces.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <PortfolioGrid items={portfolio} showFilters={true} />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .page-hero {
    padding: calc(var(--header-height) + var(--space-3xl)) 0 var(--space-2xl);
    text-align: center;
    background-color: var(--color-soft-blush);
  }

  .page-hero h1 {
    margin-bottom: var(--space-md);
  }

  .lead {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.9;
  }
</style>
