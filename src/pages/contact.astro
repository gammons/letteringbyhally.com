---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Contact - Lettering by Hally"
  description="Get in touch to discuss your wedding calligraphy project. I'll respond within 24 hours."
>
  <Header />

  <main>
    <section class="page-hero">
      <div class="container">
        <h1>Get in Touch</h1>
        <p class="lead">
          Let's discuss your project. I'll respond within 24 hours.
        </p>
      </div>
    </section>

    <section class="contact-content section">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-info">
            <h2>Let's Create Something Beautiful</h2>
            <p>
              I'd love to hear about your event and how calligraphy can bring your vision to life.
              Fill out the form and I'll be in touch soon with next steps and availability.
            </p>

            <div class="contact-details">
              <div class="contact-item">
                <h3>Email</h3>
                <a href="mailto:hello@letteringbyhally.com">hello@letteringbyhally.com</a>
              </div>

              <div class="contact-item">
                <h3>Instagram</h3>
                <a href="https://instagram.com/letteringbyhally" target="_blank" rel="noopener noreferrer">
                  @letteringbyhally
                </a>
              </div>

              <div class="contact-item">
                <h3>Response Time</h3>
                <p>Within 24 hours on business days</p>
              </div>
            </div>
          </div>

          <form
            method="POST"
            action="https://formspree.io/f/xldplkje"
            class="contact-form"
          >
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="_gotcha" />
              </label>
            </p>
            <input type="hidden" name="_next" value="/thank-you" />

            <div class="form-row">
              <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" name="name" required />
              </div>

              <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required />
              </div>
            </div>

            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone" />
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="event-date">Event Date</label>
                <input type="date" id="event-date" name="event-date" />
              </div>

              <div class="form-group">
                <label for="venue">Venue/Location</label>
                <input type="text" id="venue" name="venue" />
              </div>
            </div>

            <div class="form-group">
              <label for="services">Services Interested In *</label>
              <select id="services" name="services" required multiple>
                <option value="invitations">Wedding Invitation Calligraphy</option>
                <option value="envelopes">Envelope Addressing</option>
                <option value="dayof">Day-Of Signage & Place Cards</option>
                <option value="commissions">Custom Commissions</option>
                <option value="events">On-Site Events</option>
              </select>
              <small>Hold Ctrl/Cmd to select multiple</small>
            </div>

            <div class="form-group">
              <label for="quantity">Estimated Quantity (if applicable)</label>
              <input type="text" id="quantity" name="quantity" placeholder="e.g., 100 envelopes, 50 place cards" />
            </div>

            <div class="form-group">
              <label for="inspiration">Inspiration/Reference Links</label>
              <input type="url" id="inspiration" name="inspiration" placeholder="Pinterest, Instagram, etc." />
            </div>

            <div class="form-group">
              <label for="message">Tell me about your project *</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <Button variant="primary" size="lg">Send Inquiry</Button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .page-hero {
    padding: calc(var(--header-height) + var(--space-3xl)) 0 var(--space-2xl);
    text-align: center;
    background-color: var(--color-soft-blush);
  }

  .page-hero h1 {
    margin-bottom: var(--space-md);
  }

  .lead {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-3xl);
  }

  .contact-info h2 {
    margin-bottom: var(--space-md);
  }

  .contact-info p {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .contact-item h3 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-xs);
    opacity: 0.7;
  }

  .contact-item a {
    color: var(--color-gold-accent);
    text-decoration: underline;
  }

  .contact-item p {
    margin: 0;
    opacity: 0.9;
  }

  .contact-form {
    background-color: var(--color-soft-blush);
    padding: var(--space-xl);
    border-radius: 4px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .form-group {
    margin-bottom: var(--space-lg);
  }

  .form-group label {
    display: block;
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(26, 26, 26, 0.2);
    background-color: var(--color-warm-white);
    font-family: var(--font-body);
    font-size: 1rem;
    transition: border-color var(--transition-base);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-gold-accent);
  }

  .form-group small {
    display: block;
    margin-top: var(--space-xs);
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form {
      padding: var(--space-lg);
    }
  }
</style>
